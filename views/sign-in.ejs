<link rel="stylesheet" href="/css/auth.css" />
<link rel="stylesheet" href="/css/form.css" />

<div class="flex-center main-body">
  <form class="form-box border border-2" action="" method="post">
    <div class="form-heading border-bottom border-2">SIGN IN</div>
    <div class="form-item">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" required />
    </div>
    <div class="form-item">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" id="password" name="password" required />
    </div>
    <div class="form-item form-button">
      <button type="submit" class="btn btn-success mb-2">SIGN IN</button>
      <div>
        <span>Not Registered?<a href="/user/sign-up"> SIGN UP</a></span>
      </div>
    </div>
  </form>
</div>