<div class="below-header">
  <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modal"
    onclick="addUserForm(this)">
    Add User
  </button>
</div>

<table class="table table-dark table-striped table-hover table-bordered border-light" id="all-users-table">
  <thead>
    <tr>
      <th scope="col">Employee</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Edit Employee</th>
      <th scope="col">Remove Employee</th>
      <th scope="col">Assign Reviewers</th>
      <th scope="col">Reviewers</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(employee=> { %>

      <tr id="row-<%= employee.id %>" scope="row">
        <td class="user-name">
          <%= employee.name %>
        </td>
        <td class="user-email">
          <%= employee.email %>
        </td>
        <td class="user-role">
          <%= employee.role %>
        </td>
        <td>
          <i class="fas fa-user-edit text-primary" data-bs-toggle="modal" data-bs-target="#modal"
            onclick="editUserForm(this,'<%- employee.id %>')"></i>
        </td>
        <td>
          <% if (employee.id==user.id) { %>
            -
            <% } else { %>
              <i class="fas fa-user-times text-danger" onclick="removeUser(this,'<%- employee.id %>')"></i>
              <% } %>

        </td>
        <td>
          <i class="fas fa-user-plus text-info" data-bs-toggle="modal" data-bs-target="#modal"
            onclick="assignReviewersForm(this,'<%- employee.id %>')"></i>
        </td>
        <td>
          <i class="fas fa-eye text-success"
            onclick="goToPage(this,'/user/admin/view-reviewers/<%- employee.id %>')"></i>
        </td>
      </tr>

      <% }) %>
  </tbody>
</table>