<link rel="stylesheet" href="/css/modal.css" />

<form action="/user/admin/assign-reviewers" method="post" onsubmit="assignReviewers(this,event)" class="bg-dark">
  <input type="hidden" name="employee_id" value="<%= employee.id %>" />
  <div class="modal-header">
    <h1 class="modal-title fs-5" id="exampleModalLabel">Assign Reviewers</h1>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  <div class="modal-body">
    <div class="flex-center below-header heading">
      <%= employee.name %><br>
        <%= employee.email %>
    </div>
    <table class="table table-dark table-striped table-hover table-bordered border-light" id="assign-reviewers-table">
      <thead>
        <tr>
          <th>Employee</th>
          <th>Email</th>
          <th>Select</th>
        </tr>
      </thead>
      <tbody>
        <% reviewers.forEach(reviewer=> { %>

          <tr id="row-id">
            <td>
              <%= reviewer.name %>
            </td>
            <td>
              <%= reviewer.email %>
            </td>
            <td>
              <input class="form-check-input me-1" type="checkbox" value="<%= reviewer.id %>" id="user-id"
                name="reviewers[]" />
            </td>
          </tr>

          <% }) %>
      </tbody>
    </table>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
      Cancel
    </button>
    <button type="submit" class="btn btn-success">Assign</button>
  </div>
</form>